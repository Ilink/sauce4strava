{
    "manifest_version": 2,

    "name": "Strava Sauce",
    "short_name": "Sauce",
    "description": "Additional \"sauce\" to improve the strava website.",
    "author": "Justin Mayfield",
    "version": "4.3.0",
    "version_name": "4.3.0 [dev]",
    "minimum_chrome_version": "60",
    
    "permissions": [
        "storage",
        "declarativeContent"
    ],

    "icons": {
        "16": "assets/icons/icon16.png",
        "32": "assets/icons/icon32.png",
        "48": "assets/icons/icon48.png",
        "64": "assets/icons/icon64.png",
        "128": "assets/icons/icon128.png",
        "256": "assets/icons/icon256.png"
    },

    "background": {
        "scripts": [
            "src/ext/ga.js",
            "src/ext/storage.js",
            "src/bg/page_rules.js",
            "src/bg/rpc.js"
        ],
        "persistent": false
    },

    "page_action": {
        "default_icon": {
            "19": "assets/icons/icon19.png",
            "38": "assets/icons/icon38.png",
            "48": "assets/icons/icon48.png",
            "64": "assets/icons/icon64.png",
            "128": "assets/icons/icon128.png",
            "256": "assets/icons/icon256.png"
        },
        "default_title": "Strava Sauce",
        "default_popup": "pages/page_action_popup.html"
    },

    "options_page": "pages/page_action_popup.html",

    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",

    "content_scripts": [{
        "run_at": "document_idle",
        "matches": ["*://*.strava.com/*"],
        "css": [
            "css/site/overrides.css",
            "css/site/analysis.css"
        ]
    }, {
        "run_at": "document_end",
        "matches": ["*://*.strava.com/*"],
        "js": ["src/ext/storage.js", "src/ext/boot.js"]
    }],

    "externally_connectable": {
        "matches": ["*://*.strava.com/*"]
    },

    "web_accessible_resources": [
        "src/site/*.js",
        "css/site/*.css",
        "templates/*.html",
        "assets/ranking/*.png",
        "assets/icons/*.png"
    ]
}
